<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %> 
<body>

  <%- include('./partials/nav.ejs') %> 

      <div class="container">
          
          <div class="row">
            <div class="col s12 m6">
              <div style="background-color: indigo;border-radius: 10px;" class="card indigo darken-1">
                <div class="card-content white-text">
                  <span class="card-title">Adding items</span>
                  <p>Here you can add your items</p>

                  <a class="waves-effect waves-light btn modal-trigger" href="#modal1"><i class="material-icons left">add</i>Add items</a>

                  <div id="modal1"  class="modal">
                    <div class="modal-content">
                      <h4 style="color: rgb(68, 63, 63);">Add item details</h4>

                      <div class="row">
                        <form class="col s12" action="/items" method="POST">
                          <div class="row">
                            <div class="input-field col s6">
                              <i class="material-icons prefix">shopping_cart</i>
                              <input  name="name" id="name" type="text" class="validate">
                              <label for="name">Name</label>
                            </div>
                          </div>

                          <div class="row">

                            <div class="input-field col s6">
                              <i class="material-icons prefix">request_quote</i>
                              <input name="price" id="price" type="tel" class="validate">
                              <label for="price">Price</label>
                            </div>

                          </div>

                          <button class="modal-close waves-effect btn waves-green">Add</button>
                        </form>
                      </div>

                    </div>
                    <div class="modal-footer">
                      <!-- <a href="#!" class="modal-close waves-effect btn waves-green">ADD</a> -->
                    </div>
                  </div>
        
                  
              </div>
                </div>
               
              </div>
            </div>
          </div>


    

          <%- include('./partials/footer.ejs') %> 




<script type="text/javascript">

    document.addEventListener('DOMContentLoaded', function() {
        var elems = document.querySelectorAll('.modal');
        var instances = M.Modal.init(elems, {});
    });

</script>

      

    
</body>
</html>